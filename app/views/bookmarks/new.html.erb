<h1>Add a movie to list</h1>
<div>
<%= link_to "Back to Watch list", list_path(@list), class: "btn btn-ghost btn-outline-secondary", style: "position:absolute; top:10px; right: 50px;" %>
</div>
<div class="container">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment, placeholder: "Enter a comment about the movie" %>
    <%= f.association :movie, prompt: "Select a movie", input_html: {data: {controller: "tom-select"}} %>
    <%= f.submit class: "btn btn-ghost btn-outline-success" %>
  <% end %>
</div>
