<h1>Watch Lists</h1>
<div class="header">

</div>

<p>
  <%= link_to "Add a list", new_list_path %>
</p>

<div class="cards">
 <% @lists.each do |list| %>
    <% if (list.photo.key != nil) %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key %>)">
    <% else %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
    <% end %>
    <%= link_to list.name, list_path(list) %>
  </div>

  <% end %>
</div>


