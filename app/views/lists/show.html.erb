<h1><%= @list.name %></h1>
<div class="container">
  <div>
    <% if (@list.photo.key != nil) %>
      <%= cl_image_tag @list.photo.key, height: 200, width: 300, crop: :fill %>
    <% else %>
    no image
    <% end %>
  </div>
  <div>
    <%= link_to "Add a movie to the list", new_list_bookmark_path(params[:id]) %>
    <%= link_to "Back to Watch list", lists_path %>
  </div>
  <div>
    <%= link_to "Delete this list", list_path(@list), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
  </div>

  <% @list.movies.each do |movie| %>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <%= image_tag movie.poster_url, alt: movie.title %>
    <%= movie.title %>
    <%= movie.rating %>
    <%= movie.overview %>
    <%= bookmark.comment %>
    <%= link_to "delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}, class: 'text-danger' %>
  <% end %>
</div>
